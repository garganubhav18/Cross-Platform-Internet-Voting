<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/detail1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cpi.voting.Det" >

    <WebView
        android:id="@+id/webView1"
        android:layout_width="259dp"
        android:layout_height="195dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/webView1"
        android:layout_below="@+id/webView1"
        android:layout_marginTop="24dp"
        android:text="@string/hello_world"
        android:textSize="@dimen/abc_action_bar_title_text_size"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tv1"
        android:layout_toLeftOf="@+id/button1"
        android:text="TextView"
        android:textSize="@dimen/abc_action_bar_title_text_size"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tv2"
        android:layout_toLeftOf="@+id/button1"
        android:text="TextView"
        android:textSize="@dimen/abc_action_bar_title_text_size" />

    <Button
        android:id="@+id/button2"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/tv5"
        android:layout_alignTop="@+id/tv2"
        android:layout_toRightOf="@+id/tv1"
        android:background="@drawable/vote1"
        android:textColor="#ffffff"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tv3"
        android:layout_toLeftOf="@+id/button1"
        android:text="TextView"
        android:textSize="@dimen/abc_action_bar_title_text_size" />

    <TextView
        android:id="@+id/tv6"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/tv4"
        android:layout_below="@+id/tv4"
        android:layout_marginTop="31dp"
        android:text="TextView6"
        android:textSize="@dimen/abc_action_bar_title_text_size" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/tv6"
        android:layout_below="@+id/tv4"
        android:text="TextView5"
        android:textSize="@dimen/abc_action_bar_title_text_size" />

    <TextView
        android:id="@+id/tv7"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tv6"
        android:layout_toLeftOf="@+id/button1"
        android:text="TextView7"
        android:textSize="@dimen/abc_action_bar_title_text_size" />

</RelativeLayout>
